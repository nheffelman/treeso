

<MD3Card>
    padding: 4
    size_hint: None, None
    size: "200dp", "100dp"

    MDRelativeLayout:

        MDIconButton:
            icon: "assets/treeso.jpg"
            pos_hint: {"top": .5, "right": 1}

        MDLabel:
            id: label
            text: root.body
            adaptive_size: True
            pos: "12dp", "12dp"
            bold: True
            

<HomeScreen>:
    name: 'home'
    
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "56dp"

        MDTopAppBar:
            right_action_items:

                [["account", lambda x: app.account_pressed()],
                ["share-variant", lambda x: print("share")],          
                
                ["dots-vertical", lambda x: print("dots")],               
                ]
                  

        MDBoxLayout:
            id: box
            orientation: 'vertical'
            adaptive_size: True
            spacing: "56dp"
            pos_hint: {"center_x": .5, "center_y": .5}

        Widget:

<TreeScreen>:
    name: 'tree'

    
    MDBoxLayout:
        id: box
        orientation: 'vertical'
            
        MDTopAppBar:
            id: topbar
            left_action_items: [["arrow-left", lambda x: app.home()],]
            right_action_items:

                [["delete", lambda x: root.del_tree()],
                ["dots-vertical", lambda x: app.callback()],               
                ]   
                
                
        NameLabel:
            id: body
            halign: "center"
            valign: 'top'
            text: root.body
            on_press: root.edit_body(root.body)

        Widget:
            id: widget
        
<AccountScreen>:
    name: 'account'
    
    MDBoxLayout:
        id: box
        orientation: 'vertical'
            
        MDTopAppBar:
            left_action_items: [["arrow-left", lambda x: app.home()],]
            title: "Account"
                
        MDList:
            TwoLineListItem:
                text: "Name"
                secondary_body: "Jim"
                on_press: print("name")
            TwoLineListItem:
                text: "Email"
                secondary_body: 'jim@gmail.com'
                on_press: print("email")

        MDSeparator:
            height: "2dp"

        MDList:
            title: "Preferences"
            TwoLineListItem:
                text: "Theme Color"
                secondary_body: "Orange"
                on_press: app.choose_color()
            
        Widget:

<Picker>:
    name: 'picker'
    orientation: 'vertical'

    MDBoxLayout:
        orientation: 'vertical'

        
        MDTopAppBar:
            title: "Choose Color"
            left_action_items: [["arrow-left", lambda x: app.home()],]
            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': .8, 'center_y': .5}
                size_hint_x: .3
                MDLabel:
                    id: body
                    text: "Light/Dark"
                    
                MDSwitch:
                    id: switch
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_active: root.on_switch_active(*args)

        MDTabs:
            id: android_tabs
            on_tab_switch: root.on_tab_switch(*args)
            size_hint_y: None
            height: "48dp"
            tab_indicator_anim: False

        RecycleView:
            id: rv
            #key_viewclass: "viewclass"
            #key_size: "height"
            viewclass: "ItemColor"

            SelectableRecycleBoxLayout:
                default_size: None, dp(48)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: "vertical"
                multiselect: True
                touch_multiselect: True

<ItemColor>
    size_hint_y: None
    height: "42dp"

    MDLabel:
        text: root.body
        halign: "center"
<Tab>

<NameLabel@ButtonBehavior+MDLabel>
    
    